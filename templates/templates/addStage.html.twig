{% extends 'template.html.twig' %}

{% block title %}ajout d'un stage
{% endblock %}

{% block PageTitle %}{% endblock %}

{% block body %}
{% for message in app.session.flashBag.get('success') %}
	<div class="alert alert-success">
		{{message}}
	{% endfor %}
</div>
{% block stylesheets %}
	<style>
		.my-form-container {
			max-width: 500px;
			width: 100%;
			padding: 0;
			margin-top: 0;
		}

		h2 {
			text-align: center;
		}

		.my-form-class {
			background-color: transparent;
			padding: 15px;
			width: 100%;
			margin: 0;
			border-radius: 10px;
			border: 1px solid;
		}

		body {
			background-color: #f2f2f2; /* Couleur d'arrière-plan */
		}

		.my-form-class label {
			font-weight: bold;
		}

		.my-form-class input[type="text"],
		.my-form-class input[type="date"],
		.my-form-class select {
			border-radius: 10px;
			border: 1px solid #ccc;
			padding: 12px;
			font-size: 16px;
			width: 100%;
		}

		.my-form-class input[type="text"]:focus,
		.my-form-class input[type="date"]:focus,
		.my-form-class select:focus {
			border-color: #6e9fe5;
			box-shadow: 0 0 5px #6e9fe5;
		}

		.my-form-class input[type="submit"] {
			background-color: #6e9fe5;
			color: #fff;
			border: none;
			border-radius: 5px;
			padding: 10px 20px;
			font-size: 16px;
			cursor: pointer;
			transition: background-color 0.2s ease;
			margin-top: 10px;
			width: 100%;
		}
		.col-form-label {
			padding-top: calc(0.375rem + 1px);
			padding-bottom: calc(0.375rem + 1px);
			margin-bottom: 0;
			font-size: 0;
			line-height: 1.5;
		}

		.my-form-class input[type="submit"]:hover {
			background-color: #5577c9;
		}

		@media(max-width: 767px) {
			.my-form-container {
				padding: 10px;
			}
		}

		@media print {
			input[type="submit"] {
				display: none;
			}
		}

		.my-card {
			display: none;
		}

		.col-md-4 {
			display: none;
		}

		.card {
			border: none;
			background-color: #f2f2f2;
		}
		.center {
			display: flex;
			justify-content: center;
		}

		.nav {
			margin: 0;
		}
		.retour {
			text-decoration: none;
		}
	</style>
{% endblock %}

